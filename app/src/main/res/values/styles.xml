<resources>

    <style name="Widget.App.EditText" parent="Widget.AppCompat.EditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_primary_normal</item>

    </style>

    <style name="Widget.App.EditText.Login" parent="Widget.App.EditText">
        <item name="android:paddingTop">@dimen/padding</item>
        <item name="android:paddingBottom">@dimen/padding</item>
        <item name="android:maxLines">1</item>
        <item name="android:textColor">@color/Black</item>
        <item name="android:textColorHint">@color/textColorHintPrimary</item>
        <item name="colorControlNormal">#70EE2F37</item>
        <item name="colorControlActivated">#90EE2F37</item>
        <item name="android:theme">@style/Theme.EditText</item>
        <item name="android:textCursorDrawable">@drawable/et_cursor_handler</item>
        <item name="colorControlHighlight">@color/colorPrimaryDark</item>

    </style>

    <style name="Widget.App.EditText.TextPassword" parent="Widget.App.EditText.Login">
        <item name="android:inputType">textPassword</item>
        <item name="android:hint">@string/password</item>

    </style>

    <style name="Widget.App.EditText.FullName" parent="Widget.App.EditText.Login">
        <item name="android:inputType">textPersonName</item>

    </style>

    <style name="Widget.App.EditText.Email" parent="Widget.App.EditText.Login">
        <item name="android:inputType">textEmailAddress</item>
        <item name="android:hint">@string/email</item>
    </style>

    <style name="Widget.App.TextInputLayout.TextAppearance.Hint" parent="TextAppearance.Design.Hint">
        <item name="android:textColor">#80FE2F37</item>
        <item name="android:textColorHint">@color/textColorHintPrimary</item>

    </style>

    <style name="Widget.App.TextView.Title" parent="Base.TextAppearance.AppCompat.Title">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/textColorsPrimary</item>
        <item name="android:textSize">@dimen/text_primary_medium</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="Widget.App.TextView.SubTitle" parent="Base.TextAppearance.AppCompat.Subhead">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:paddingTop">@dimen/padding_smallest</item>
        <item name="android:textColor">@color/textColorsSecondary</item>
        <item name="android:textSize">@dimen/text_size_subtitle_material</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:maxLines">2</item>
    </style>

    <style name="Widget.App.TextView.Price" parent="Base.TextAppearance.AppCompat">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">@dimen/padding_smallest</item>
        <item name="android:paddingBottom">@dimen/padding_smallest</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/textColorPrice</item>
        <item name="android:textSize">@dimen/text_primary_normal</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="Widget.App.TextView.Description" parent="Base.TextAppearance.AppCompat">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">@dimen/padding_smallest</item>
        <item name="android:paddingBottom">@dimen/padding_smallest</item>
        <item name="android:textColor">@color/textColorsSecondary</item>
        <item name="android:textSize">@dimen/text_primary_normal</item>

    </style>

    <style name="Widget.App.Button.Login" parent="Base.TextAppearance.AppCompat">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">@dimen/padding_smallest</item>
        <item name="android:paddingBottom">@dimen/padding_smallest</item>
        <item name="android:paddingLeft">@dimen/padding</item>
        <item name="android:paddingRight">@dimen/padding</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/text_primary_medium</item>
        <item name="android:background">@drawable/bg_btn_rounded_selector</item>
        <item name="android:maxLines">1</item>
        <item name="android:minWidth">180dp</item>

    </style>

    <style name="Widget.App.TextInputLayout" parent="Widget.Design.TextInputLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="hintTextAppearance">@style/Widget.App.TextInputLayout.TextAppearance.Hint</item>
        <item name="android:textColorHint">@color/textColorHintPrimary</item>
        <item name="errorTextAppearance">@style/Widget.App.TextInputLayout.TextAppearance.Error</item>

    </style>

    <style name="Widget.App.TextInputLayout.TextAppearance.Error" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/md_red_800</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="Widget.App.Button.Search" parent="Widget.App.Button.Login">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">0dp</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="android:paddingLeft">@dimen/padding</item>
        <item name="android:paddingRight">@dimen/padding</item>
        <item name="android:minHeight">45dp</item>
        <item name="android:minWidth">120dp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/text_primary_medium</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="Widget.App.NavigationItemTextAppearance" parent="TextAppearance.AppCompat.Medium">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">normal</item>

    </style>

</resources>
