<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    app:cardCornerRadius="@dimen/elevationLow"
    app:cardElevation="@dimen/elevationMedium"
    app:cardMaxElevation="@dimen/elevationMedium"
    app:cardBackgroundColor="@android:color/white"
    app:contentPaddingBottom="@dimen/margin_smaller">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.devbatch.ecommerce.widgets.SquaredFrameLayout
            android:id="@+id/frame"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.devbatch.ecommerce.widgets.SquareImageView
                android:id="@+id/image"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <!--<com.wang.avi.AVLoadingIndicatorView-->
            <!--android:id="@+id/progress_wheel"-->
            <!--android:layout_width="40dp"-->
            <!--android:layout_height="40dp"-->
            <!--android:layout_gravity="center"-->
            <!--android:background="@android:color/transparent"-->
            <!--android:theme="@style/Theme.Base.Sadeek"-->
            <!--app:indicatorColor="@color/color_ripple"-->
            <!--app:indicatorName="BallSpinFadeLoaderIndicator" />-->
        </com.devbatch.ecommerce.widgets.SquaredFrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/padding"
            android:paddingRight="@dimen/padding">


            <com.devbatch.ecommerce.widgets.TextView
                android:id="@+id/title"
                style="@style/Widget.App.TextView.Title"
                android:layout_width="0dp"
                android:layout_marginEnd="@dimen/margin_smallest"
                android:layout_marginRight="@dimen/margin_smallest"
                android:layout_weight="1"
                tools:ignore="HardcodedText"
                android:text="@string/app_name" />

            <com.devbatch.ecommerce.widgets.TextView
                android:id="@+id/price"
                style="@style/Widget.App.TextView.Price"
                android:layout_marginLeft="@dimen/margin_smallest"
                android:layout_marginStart="@dimen/margin_smallest"
                tools:ignore="HardcodedText"
                android:text="$ 1.49" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:orientation="horizontal"
            android:paddingEnd="@dimen/padding"
            android:paddingLeft="@dimen/padding"
            android:paddingRight="@dimen/padding"
            android:paddingStart="@dimen/padding">


            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/description"
                style="@style/Widget.App.TextView.Description"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/margin_smallest"
                android:layout_marginRight="@dimen/margin_smallest"
                android:layout_weight="1"
                android:maxLines="2"
                tools:ignore="HardcodedText"
                android:text="Lorem Ipsum is simply dummy text of the printing and typesetting industry. Lorem Ipsum has been the industry's standard dummy text ever since the 1500s, when an unknown printer took a galley of type and scrambled it to make a type specimen book. It has survived not only five centuries" />

            <android.support.v7.widget.AppCompatImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/margin_smaller"
                android:layout_marginLeft="@dimen/margin_smallest"
                android:layout_marginRight="@dimen/margin_smaller"
                android:layout_marginStart="@dimen/margin_smallest"
                android:layout_marginTop="@dimen/margin_smaller"
                android:minHeight="25dp"
                android:minWidth="25dp"
                android:src="@drawable/ic_cart_gray" />
        </LinearLayout>


    </LinearLayout>
</android.support.v7.widget.CardView>